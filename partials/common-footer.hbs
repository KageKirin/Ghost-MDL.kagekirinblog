<footer class="mdl-mini-footer">
  <div class="mdl-mini-footer--left-section">

    <a class="icon-twitter"
      {{#is "post, page"}}
        href="https://twitter.com/share?text={{encode title}}&amp;url={{url absolute="true"}}"
      {{else}}
        href="https://twitter.com/share?text={{encode @blog.title}}&amp;url={{@blog.url}}"
      {{/is}}
      onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;">
      <button class="mdl-mini-footer--social-btn social-btn social-btn__twitter"></button>
    </a>

    <a class="icon-facebook"
      {{#is "post, page"}}
        href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}"
      {{else}}
        href="https://www.facebook.com/sharer/sharer.php?u={{@blog.url}}"
      {{/is}}
      onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;">
      <button class="mdl-mini-footer--social-btn social-btn social-btn__blogger"></button>
    </a>

    <a class="icon-google-plus"
      {{#is "post, page"}}
        href="https://plus.google.com/share?url={{url absolute="true"}}"
      {{else}}
        href="https://plus.google.com/share?url={{@blog.url}}"
      {{/is}}
      onclick="window.open(this.href, 'google-plus-share', 'width=490,height=530');return false;">
      <button class="mdl-mini-footer--social-btn social-btn social-btn__gplus"></button>
    </a>

  </div>

  <div class="mdl-mini-footer--right-section">
    <button class="mdl-mini-footer--social-btn social-btn__share"><i class="material-icons">share</i></button>
  </div>

</footer>
