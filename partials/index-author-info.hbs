<!-- contact info, always displayed next to first post -->
{{#author}}
<div class="mdl-card author-{{id}}-{{slug}} something-else mdl-cell mdl-cell--8-col mdl-cell--4-col-desktop mdl-shadow--2dp">
	<ul class="mdl-menu mdl-js-menu mdl-menu--bottom-right" for="testbtn">
		<button class="mdl-button mdl-js-ripple-effect mdl-js-button mdl-button--fab mdl-color--accent">
			<i class="material-icons mdl-color-text--white">about</i>
		</button> {{! url}}
		<button class="mdl-button mdl-js-ripple-effect mdl-js-button mdl-button--fab mdl-color--accent">
			<i class="material-icons mdl-color-text--white">message</i>
		</button>
		<button class="mdl-button mdl-js-ripple-effect mdl-js-button mdl-button--fab mdl-color--accent">
			<i class="material-icons mdl-color-text--white">favorite</i>
		</button>
		<button class="mdl-button mdl-js-ripple-effect mdl-js-button mdl-button--fab mdl-color--accent">
			<i class="material-icons mdl-color-text--white">search</i>
		</button>
	</ul>

	<button id="testbtn" class="mdl-button mdl-js-ripple-effect mdl-js-button mdl-button--fab mdl-color--accent">
		<i class="material-icons mdl-color-text--white">whatshot
			{{!<i class="mdi mdl-color-text--white">\f492}}
		</i>
	</button>
{{!-- <a href="{{@blog.url}}/rss"></a> --}}

	<div class="mdl-card__media mdl-color--white mdl-color-text--grey-600">
		<img src="{{image}}">
		{{name}}
	</div>
	<div class="mdl-card__supporting-text meta meta--fill mdl-color-text--grey-600">
		<div>
			<strong>{{bio}}</strong>
		</div>
