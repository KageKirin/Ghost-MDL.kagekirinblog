{{#author}}
.demo-blog .author-{{id}}-{{slug}} .mdl-card__media {
	{{#if cover}}
		background-image: url('{{cover}}');
	{{else}}
		{{! background-image: url('{{asset "images/coffee.jpg"}}'); }}
	{{/if}}
}

.demo-blog .minilogo-author-{{id}}-{{slug}} {
	width: 44px;
	height: 44px;
	background-position: center;
	background-repeat: no-repeat;
	background-size: cover;
	border-radius: 22px;
	background-color: #F5F5F5;
{{#if image}}
	background-image: url('{{image}}');
{{else}}
	{{! background-image: url('{{asset "images/avatar.png"}}'); }}
{{/if}}
}

.demo-blog .logo-author-{{id}}-{{slug}} {
	z-index: 1;
	width: 66px;
	height: 66px;
	background-position: center;
	background-repeat: no-repeat;
	background-size: 50%;
	border-radius: 33px;
	background-color: #F5F5F5;
{{#if image}}
	background-image: url('{{image}}');
	background-size: cover;
{{else}}
	{{! background-image: url('{{asset "images/avatar.png"}}'); }}
{{/if}}
}
{{/author}}
