<style>

.demo-blog--blogpost .demo-blog__posts > .mdl-card .mdl-card__media {
	{{#if image}}
		background-image: url('{{image}}');
	{{else}}
		{{#if tags}}
			{{#foreach tags}}
				{{#if @first}}
					background-image: url('{{image}}');
				{{/if}}
			{{/foreach}}
		{{else}}
			background-image: url('{{@blog.cover}}');
			{{! background-image: url('../images/road_big.jpg'); }} {{! default image or depending on tag}}
		{{/if}}
	{{/if}}
	height: 280px;
}

{{> css-author}}
</style>
